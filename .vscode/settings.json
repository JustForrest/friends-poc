{
  // --- Python Settings ---
  "python.defaultInterpreterPath": "./venv/bin/python",
  "python.analysis.typeCheckingMode": "basic",

  // --- Formatting & Linting ---
  "editor.formatOnSave": true,
  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter",
    "editor.codeActionsOnSave": {
      "source.organizeImports": "explicit"
    }
  },
  "[javascript][typescript][typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  // --- File Exclusions ---
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true,
    "__pycache__": true,
    "**/.pytest_cache": true
  },
  "chat.mcp.serverSampling": {
    "friends-poc/.vscode/mcp.json: my-mcp-server-d2fe98c8": {
      "allowedModels": [
        "github.copilot-chat/gpt-4.1",
        "github.copilot-chat/claude-3.5-sonnet",
        "github.copilot-chat/gemini-2.0-flash-001",
        "github.copilot-chat/Gemini-models/gemini-2.5-pro-preview-03-25"
      ]
    }
  }
}